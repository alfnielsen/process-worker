{
  "name": "redis-process-worker",
  "description": "A worker process helper for using redis cache and streams.",
  "version": "0.0.2002-beta",
  "module": "src/ProcessWorker.ts",
  "main": "dist/ProcessWorker.js",
  "types": "dist/types/index.d.ts",
  "type": "module",
  "scripts": {
    "dev:patch": "bun run ./dev-scripts/use-patch-in-example.worker.ts",
    "build": "bun run build:main && bun run build:declaration",
    "build:main": "bun build ./src/*.ts ./src/**/*.ts --outdir dist --external=ioredis --target node",
    "build:declaration": "tsc --emitDeclarationOnly --declaration --declarationMap --project tsconfig.types.json",
    "pub:beta": "npm publish --tag beta",
    "pub": "npm publish"
  },
  "dependencies": {
    "ioredis": "^5.6.1"
  },
  "peerDependencies": {
    "ioredis": "^5.6.1",
    "typescript": "^5"
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "exports": {
    ".": {
      "import": "./dist/ProcessWorker.js",
      "require": "./dist/ProcessWorker.js",
      "types": "./dist/types/ProcessWorker.d.ts"
    },
    "./client": {
      "import": "./dist/client/client-connector.js",
      "require": "./dist/client/client-connector.js",
      "types": "./dist/types/client/client-connector.d.ts"
    }
  },
  "license": "MIT"
}
